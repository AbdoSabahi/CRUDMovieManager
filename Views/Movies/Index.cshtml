@model IEnumerable<APPMovies.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<div class="container mt-4">
    <h2 class="mb-4 ">
        <i class="fa-solid fa-film"></i> Movies
    </h2>

    <a class="btn btn-primary mb-4" asp-action="Create">
        <i class="fa-solid fa-plus"></i> Add Movie
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="fa-solid fa-triangle-exclamation"></i> No Movies Found!
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 d-flex flex-column align-items-center">
                @foreach (var movie in Model)
                {
                    <div class="card mb-3 shadow-sm w-75">
                        <div class="row g-0">
                            <div class="col-md-2 d-flex align-items-center justify-content-center bg-light">
                                <!-- الصورة -->
                                <img src="/posters/@movie.Poster"
                                     onerror="this.onerror=null; this.src='/images/no-poster.png';"
                                     alt="Poster"
                                     class="img-fluid rounded"
                                     style="width:150px; height:100%; object-fit:cover;" />
                            </div>

                            <div class="col-md-10">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <div>
                                        <h5 class="card-title mb-1 text-dark">
                                            @movie.Titel (@movie.Year)
                                        </h5>
                                        <p class="card-text text-muted">@movie.Storline</p>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <p class="mb-0">
                                            <i class="fa-solid fa-star text-warning"></i>
                                            <small>@movie.Rate</small>
                                        </p>

                                        <div>
                                            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-secondary btn-sm">
                                                <i class="fa-solid fa-circle-info"></i> Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-outline-primary btn-sm">
                                                <i class="fa-solid fa-pen"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">
                                                <i class="fa-solid fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                        }
            </div>
        </div>
    }
</div>
